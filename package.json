{
  "name": "ng-unit",
  "version": "1.2.0",
  "description": "Angular component testing and mocking made easy",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/ng-unit.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/ng-unit/issues"
  },
  "keywords": [
    "angular",
    "ng",
    "test",
    "testing",
    "testbed",
    "mock",
    "mocking",
    "directive",
    "component"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.d.ts",
    "build": "npm run clean && tsc",
    "release": "npm run test:browsers && npm run build && npm publish && npm run clean",
    "test": "mocha --watch",
    "test:nowatch": "mocha",
    "test:coverage": "nyc mocha",
    "test:browsers": "./test-browsers.sh",
    "test:prior-versions": "./test-angular-version.sh ^15.2.9 && ./test-angular-version.sh ^14.3.0 && ./test-angular-version.sh ^13.4.0 && ./test-angular-version.sh ^12.2.17 && ./test-angular-version.sh ^11.2.14 && ./test-angular-version.sh ^10.2.5 && ./test-angular-version.sh ^9.1.13 && ./test-angular-version.sh ^8.2.14 && ./test-angular-version.sh ^7.2.15 && ./test-angular-version.sh ^6.1.10",
    "lint": "tslint --project .",
    "ci": "yarn test:browsers && yarn lint && yarn test:prior-versions && yarn test:coverage && yarn build && nyc report --reporter=text-lcov | coveralls "
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "reporter": "progress",
    "spec": "./src/**/*.spec.*",
    "watch-files": [
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "require": [
      "./mocha-init.ts"
    ],
    "node-option": [
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@angular/common": "^16.0.2",
    "@angular/compiler": "^16.0.2",
    "@angular/core": "^16.0.2",
    "@angular/forms": "^16.0.2",
    "@angular/platform-browser": "^16.0.2",
    "@angular/platform-browser-dynamic": "^16.0.2",
    "@tsconfig/node18": "^2.0.1",
    "@types/chai": "^4.0.4",
    "@types/chai-dom": "0.0.7",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^5.0.0",
    "@types/node": "^11.10.5",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack-env": "^1.13.6",
    "chai": "^4.3.7",
    "chai-dom": "^1.5.0",
    "core-js": "^2.5.1",
    "coveralls": "^3.0.0",
    "jsdom": "^21.1.0",
    "jsdom-global": "^3.0.2",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^2.0.2",
    "karma-webpack": "^3.0.0",
    "mocha": "^10.2.0",
    "mocha-where": "^1.1.5",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.3",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^5.0.4",
    "webpack": "^4.11.1",
    "zone.js": "^0.13.0"
  },
  "dependencies": {
    "function-composition": "^1.0.12",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.12"
  },
  "peerDependencies": {
    "@angular/core": ">=2.4.10"
  }
}
