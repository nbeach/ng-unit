{
  "name": "ng-unit",
  "version": "0.11.0",
  "description": "Testing utilities for Angular",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/ng-unit.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/ng-unit/issues"
  },
  "keywords": [
    "angular",
    "ng",
    "test",
    "testing",
    "mock",
    "mocking",
    "component"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.d.ts",
    "build": "npm run clean && tsc",
    "release:tag": "git tag $(node -p -e \"require('./package.json').version\") && git push origin --tags",
    "release": "npm run test:browsers && npm run build && npm run release:tag && npm publish && npm run clean",
    "test": "mocha --opts mocha.opts --watch",
    "test:coverage": "nyc mocha --opts mocha.opts",
    "test:browsers": "./test-browsers.sh",
    "test:prior-versions": "./test-angular-version.sh ^6.1.9 && ./test-angular-version.sh ^5.2.9 && ./test-angular-version.sh ^4.4.7 && ./test-angular-version.sh ^2.4.10",
    "lint": "tslint --project .",
    "ci": "yarn test:browsers && yarn lint && yarn test:prior-versions && yarn test:coverage && yarn build && nyc report --reporter=text-lcov | coveralls "
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@angular/common": "^7.0.1",
    "@angular/compiler": "^7.0.1",
    "@angular/core": "^7.0.1",
    "@angular/forms": "^7.0.1",
    "@angular/platform-browser": "^7.0.1",
    "@angular/platform-browser-dynamic": "^7.0.1",
    "@types/chai": "^4.0.4",
    "@types/chai-dom": "0.0.6",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.4",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^2.7.29",
    "@types/webpack-env": "^1.13.6",
    "chai": "^4.1.2",
    "chai-dom": "^1.5.0",
    "core-js": "^2.5.1",
    "coveralls": "^3.0.0",
    "jsdom": "^11.2.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.0.5",
    "mocha-where": "^1.1.5",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "ts-loader": "^4.3.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "~3.1.3",
    "webpack": "^4.11.1",
    "zone.js": "^0.8.17"
  },
  "dependencies": {
    "function-composition": "^1.0.12",
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.12"
  },
  "peerDependencies": {
    "@angular/core": ">=2.4.10"
  }
}
